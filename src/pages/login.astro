---
import Layout from '../layouts/Layout.astro';
import { LoginCard } from '../components/auth/LoginCard';
---

<Layout title="Iniciar Sesión - CVStudio">
    <div class="min-h-screen flex flex-col items-center justify-center bg-app-bg relative overflow-hidden">
        
        {/* --- NUEVO: Logo en la esquina superior izquierda --- */}
        <a 
            href="/" 
            class="absolute top-6 left-6 z-50 flex items-center gap-2 group hover:opacity-80 transition-opacity"
            title="Volver al inicio"
        >
            <div class="bg-blue-600 w-8 h-8 rounded-lg flex items-center justify-center shadow-lg shadow-blue-900/20 group-hover:scale-105 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
            </div>
            <span class="text-xl font-bold text-white tracking-tight hidden sm:inline">
                CVStudio<span class="text-blue-500">.tools</span>
            </span>
        </a>

        {/* Background Decorativo */}
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
            <div class="absolute top-[-10%] right-[-5%] w-96 h-96 bg-blue-600/20 rounded-full blur-3xl"></div>
            <div class="absolute bottom-[-10%] left-[-5%] w-96 h-96 bg-purple-600/20 rounded-full blur-3xl"></div>
        </div>

        <div class="z-10 w-full max-w-md px-4">
            {/* Eliminamos el logo centrado que había antes aquí para no repetir */}
            
            <LoginCard client:load />
        </div>
    </div>
</Layout>