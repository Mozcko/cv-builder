---
import AppLayout from '../../layouts/AppLayout.astro';
import SiteHeader from '../../components/ui/SiteHeader';
import { supabase } from '../../lib/supabase';

// 1. Protección de Ruta (Server Side)
const { cookies, redirect } = Astro;

// Supabase Auth Helper para SSR (Básico)
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

// NOTA: Para producción real con SSR estricto necesitaríamos más configuración,
// pero por ahora confiaremos en la redirección del cliente si falla.

// 2. Obtener CVs del usuario
// Usamos el cliente admin/anon pero filtrado por RLS (Row Level Security)
// que configuramos en SQL. Necesitamos la sesión activa.
// Como estamos en modo híbrido, haremos el fetch en el cliente (React)
// o aquí si configuramos las cookies de Supabase.
---

<AppLayout title="Mis Currículums - CVStudio">
    <SiteHeader client:load />
    
    <main class="container mx-auto px-4 pt-24 pb-12">
        <div class="flex justify-between items-end mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Mis Currículums</h1>
                <p class="text-slate-400">Gestiona y edita tus documentos.</p>
            </div>
            
            <button 
                id="btn-create-cv"
                class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-bold flex items-center gap-2 transition-colors"
            >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                    <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                </svg>
                Crear Nuevo
            </button>
        </div>

        <div id="cv-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="col-span-full text-center text-slate-500 py-10 animate-pulse">
                Cargando tus documentos...
            </div>
        </div>
    </main>
</AppLayout>

<script lang="ts">
    import { supabase } from '../../lib/supabase';

    const grid = document.getElementById('cv-grid');
    const btnCreate = document.getElementById('btn-create-cv');

    // 1. Función para cargar CVs
    async function loadResumes() {
        // Obtenemos el usuario actual
        const { data: { user } } = await supabase.auth.getUser();
        if (!user) {
            window.location.href = '/login';
            return;
        }

        if (!grid) return;

        // Pedimos los CVs a Supabase
        const { data: resumes, error } = await supabase
            .from('resumes')
            .select('*')
            .order('updated_at', { ascending: false });

        if (error) {
            console.error('Error cargando CVs:', error);
            grid.innerHTML = `<div class="text-red-400">Error al cargar datos.</div>`;
            return;
        }

        // Renderizamos (Si no hay CVs)
        if (!resumes || resumes.length === 0) {
            grid.innerHTML = `
                <div class="col-span-full border-2 border-dashed border-slate-700 rounded-xl p-10 flex flex-col items-center justify-center text-slate-500">
                    <p class="mb-4">No tienes currículums guardados aún.</p>
                    <button id="btn-create-empty" class="text-blue-400 hover:text-white underline">Crear el primero</button>
                </div>
            `;
            document.getElementById('btn-create-empty')?.addEventListener('click', createNewResume);
            return;
        }

        // Renderizamos las Tarjetas
        grid.innerHTML = resumes.map(cv => `
            <div class="bg-slate-800 border border-slate-700 rounded-xl p-5 hover:border-slate-500 transition-all group relative overflow-hidden">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-10 h-10 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400 font-bold uppercase">
                        ${cv.language || 'ES'}
                    </div>
                    <div class="text-xs text-slate-500">
                        ${new Date(cv.updated_at).toLocaleDateString()}
                    </div>
                </div>
                <h3 class="text-xl font-bold text-white mb-1 truncate">${cv.title || 'Mi CV Sin Título'}</h3>
                <p class="text-sm text-slate-400 mb-6 line-clamp-2">
                    ${cv.data?.personal?.summary || 'Sin resumen profesional...'}
                </p>
                
                <div class="flex gap-2">
                    <a href="/app/editor?id=${cv.id}" class="flex-1 bg-slate-700 hover:bg-slate-600 text-white py-2 rounded-lg text-sm font-medium text-center transition-colors">
                        Editar
                    </a>
                    <button onclick="deleteResume('${cv.id}')" class="p-2 text-slate-400 hover:text-red-400 hover:bg-slate-700 rounded-lg transition-colors" title="Eliminar">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                        </svg>
                    </button>
                </div>
            </div>
        `).join('');
        
        // Asignar eventos a los botones de borrar (porque innerHTML borra los listeners)
        (window as any).deleteResume = deleteResume; 
        // @ts-ignore
        window.deleteResume = deleteResume; 
    }

    // 2. Función Crear Nuevo
    async function createNewResume() {
        const { data: { user } } = await supabase.auth.getUser();
        if(!user) return;

        // Insertamos un row vacío
        const { data, error } = await supabase
            .from('resumes')
            .insert([
                { 
                    user_id: user.id,
                    title: 'Nuevo Currículum',
                    data: {}, // Se llenará con el default en el editor
                    language: 'es'
                }
            ])
            .select()
            .single();

        if (error) {
            alert('Error al crear: ' + error.message);
        } else {
            // Redirigir al editor con el ID nuevo
            window.location.href = `/app/editor?id=${data.id}`;
        }
    }

    // 3. Función Borrar
    async function deleteResume(id: string) {
        if(!confirm('¿Estás seguro de eliminar este CV?')) return;
        
        const { error } = await supabase.from('resumes').delete().eq('id', id);
        if(error) alert(error.message);
        else loadResumes(); // Recargar lista
    }

    // Inicializar
    btnCreate?.addEventListener('click', createNewResume);
    loadResumes();

</script>